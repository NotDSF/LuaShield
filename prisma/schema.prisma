// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid()) @map("_id")
  Key           String   @unique
  Username      String   @unique
  HWID          String?  @unique
  ProjectID     String   @unique
  Executions    Int      @default(0)
  CrackAttempts Int      @default(0)
  Exploit       String?
  Whitelisted   Boolean  @default(true)
  CreatedAt     DateTime @default(now())
  ExpireAt      Int?
  MaxExecutions Int      @default(0)
  Note          String   @default("")
  DiscordID     String?
}

model Project {
  id                  String  @id @default(uuid()) @map("_id")
  Executions          Int     @default(0)
  CrackAttempts       Int     @default(0)
  Users               Int     @default(0)
  Name                String
  SuccessWebhook      String
  BlacklistWebhook    String
  UnauthorizedWebhook String
  Online              Boolean
  SynapseX            Boolean
  ScriptWare          Boolean
  SynapseV3           Boolean
  Owner               String
}

model Script {
  id        String   @id @default(uuid()) @map("_id")
  Name      String
  ProjectID String
  Version   String
  Versions  String[] @default([])
}

model Buyer {
  id                 String   @id @default(uuid()) @map("_id")
  Projects           String[] @default([])
  Email              String   @unique
  Password           String   @unique
  APIKey             String   @unique
  Username           String   @unique
  SubscriptionID     String
  Admin              Boolean @default(false)
}

model Subscription {
  SubscriptionID  String @id @default(uuid()) @map("_id")
  Expire Int 
  Reset Int
  Email String? @unique
  Obfuscations Int?
  Projects Int?
  Scripts Int?
}
